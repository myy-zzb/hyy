/* miniprogram/components/quarrel-list/quarrel-list.wxss */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 680rpx;
  max-height: 85vh;
  background: #ffffff;
  border-radius: 30rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 50rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.add-btn {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
}

/* 统计信息 */
.stats-section {
  display: flex;
  padding: 30rpx 50rpx;
  background: linear-gradient(135deg, #fff5f5 0%, #ffe5e5 100%);
  gap: 20rpx;
  flex-shrink: 0;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.quarrels-list {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx 50rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-subtext {
  font-size: 24rpx;
  color: #999;
}

.quarrel-item {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  padding-right: 80rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-right: 0;
}

.severity-badge {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  color: white;
  font-size: 24rpx;
  max-width: 200rpx;
}

.severity-emoji {
  font-size: 28rpx;
  flex-shrink: 0;
}

.severity-text {
  font-weight: 500;
}

.item-mood {
  font-size: 40rpx;
  flex-shrink: 0;
}

.item-content {
  flex: 1;
}

.item-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.item-reason {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.reconcile-status {
  margin-top: 12rpx;
}

.reconcile-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  background: #f6ffed;
  color: #52c41a;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.item-actions {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 10rpx;
  z-index: 10;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  font-size: 36rpx;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* 添加弹窗 */
.add-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1001;
}

.add-modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 650rpx;
  max-height: 90vh;
  background: #ffffff;
  border-radius: 30rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.add-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 50rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.add-modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form-scroll {
  flex: 1;
  height: 0;
}

.form {
  padding: 40rpx 50rpx;
  padding-bottom: 60rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.6;
}

.datetime-row {
  display: flex;
  gap: 20rpx;
}

.datetime-picker {
  flex: 1;
}

.picker-display {
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.severity-options {
  display: flex;
  gap: 15rpx;
}

.severity-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.severity-option.active {
  border-width: 3rpx;
  transform: scale(1.05);
}

.severity-option-emoji {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.severity-option-text {
  font-size: 24rpx;
  color: #666;
}

.mood-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.mood-option {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  background: #f5f5f5;
  border-radius: 50%;
  border: 3rpx solid transparent;
  transition: all 0.3s;
}

.mood-option.active {
  border-color: #ff6b6b;
  background: #fff5f5;
  transform: scale(1.1);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 32rpx;
  border: none;
  margin-top: 20rpx;
}

/* 详情弹窗 - 关键修复 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1002;
}

.detail-modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 650rpx;
  max-height: 85vh;
  background: #ffffff;
  border-radius: 30rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx 30rpx; /* 减小左右内边距 */
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
  background: white;
  z-index: 1;
}

.detail-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 可滚动的详情内容 - 减小内边距 */
.detail-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx 40rpx; /* 减小左右内边距，从 50rpx 改为 40rpx */
  padding-bottom: 40rpx;
  /* 添加 box-sizing 确保宽度计算正确 */
  box-sizing: border-box;
}

.detail-section {
  margin-bottom: 30rpx;
}

.detail-time {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.detail-emoji {
  font-size: 32rpx;
}

.detail-severity {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
  gap: 10rpx;
}

.detail-mood {
  font-size: 24rpx;
  color: #999;
}

.detail-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

/* 修复内容区域宽度 - 关键修改 */
.detail-content {
  width: 100%; /* 明确设置宽度为 100% */
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx; /* 内边距 */
  box-sizing: border-box; /* 重要：包含 padding 在宽度内 */
  font-size: 26rpx;
  color: #333;
  line-height: 1.8;
  word-break: break-word;
  white-space: pre-wrap;
  min-height: 80rpx;
  /* 防止溢出 */
  overflow-wrap: break-word;
}

.detail-content.hurtful {
  background: #fff5f5;
  color: #ff6b6b;
}

.reconcile-section {
  text-align: center;
  padding: 30rpx 0;
}

.reconcile-success {
  font-size: 32rpx;
  color: #52c41a;
  display: block;
  margin-bottom: 20rpx;
}

.reconcile-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 32rpx;
  border: none;
  margin-top: 20rpx;
  /* 添加 box-sizing */
  box-sizing: border-box;
}