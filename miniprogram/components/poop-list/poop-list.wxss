/* miniprogram/components/poop-list/poop-list.wxss */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2000; /* 列表弹窗层级 */
}

.modal-mask {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 680rpx;
  max-height: 85vh;
  background: #ffffff;
  border-radius: 30rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 50rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.add-btn {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
}

/* 统计信息 */
.stats-section {
  display: flex;
  padding: 30rpx 50rpx;
  background: linear-gradient(135deg, #FFF8DC 0%, #FAEBD7 100%);
  gap: 20rpx;
  flex-shrink: 0;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.poops-list {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx 50rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-subtext {
  font-size: 24rpx;
  color: #999;
}

.poop-item {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  padding-right: 80rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.poop-type {
  font-size: 24rpx;
  font-weight: 500;
}

.feeling-emoji {
  font-size: 48rpx;
}

.item-content {
  flex: 1;
}

.item-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.item-info-row {
  display: flex;
  gap: 15rpx;
  margin-bottom: 12rpx;
}

.info-tag {
  font-size: 22rpx;
  color: #666;
  background: #e8e8e8;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.item-warning {
  background: #fff3cd;
  color: #856404;
  padding: 10rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.item-actions {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 10rpx;
  z-index: 10;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  font-size: 36rpx;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* 添加弹窗 - 提高层级 */
.add-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2100; /* 比列表弹窗(2000)高，确保在上层 */
}

.add-modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 650rpx;
  max-height: 90vh;
  background: #ffffff;
  border-radius: 30rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  max-height: 90vh;
}

.add-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 50rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.add-modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form-scroll {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.form {
  padding: 40rpx 50rpx;
  padding-bottom: 60rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.6;
}

.datetime-row {
  display: flex;
  gap: 20rpx;
}

.datetime-picker {
  flex: 1;
}

.picker-display {
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.type-options,
.feeling-options,
.location-options,
.color-options,
.smell-options {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.type-option,
.feeling-option,
.location-option,
.color-option,
.smell-option {
  flex: 1;
  min-width: calc(25% - 12rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.type-option.active,
.feeling-option.active,
.location-option.active,
.color-option.active,
.smell-option.active {
  border-width: 3rpx;
  border-color: #8B4513;
  transform: scale(1.05);
}

.type-emoji,
.feeling-emoji,
.location-emoji,
.smell-emoji {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.type-text,
.feeling-text,
.location-text,
.color-text,
.smell-text {
  font-size: 24rpx;
  color: #666;
}

.color-circle {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-bottom: 8rpx;
  border: 2rpx solid #e0e0e0;
}

.blood-check {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.blood-warning {
  margin-top: 10rpx;
  background: #fff3cd;
  color: #856404;
  padding: 15rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  text-align: center;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 32rpx;
  border: none;
  margin-top: 20rpx;
}

