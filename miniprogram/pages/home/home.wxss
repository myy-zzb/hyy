/* pages/home/home.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

.header {
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.welcome {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
}

.notification-btn {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.notification-icon {
  font-size: 40rpx;
}

.notification-badge {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: #ff4444;
  color: white;
  font-size: 20rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
  font-weight: bold;
}

.love-card {
  background: white;
  border-radius: 40rpx;
  padding: 80rpx 60rpx;
  text-align: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}

.love-card.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.love-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.love-card.empty .love-icon {
  margin-bottom: 0;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
}

.bind-btn {
  width: 320rpx;
  height: 88rpx;
  border-radius: 16rpx;
  border: none;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 32rpx;
}

.love-days {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 20rpx;
}

.days-number {
  font-size: 80rpx;
  font-weight: bold;
  color: #667eea;
}

.days-text {
  font-size: 36rpx;
  color: #666;
  margin-left: 10rpx;
}

.love-date {
  font-size: 28rpx;
  color: #999;
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.feature-item {
  background: white;
  border-radius: 30rpx;
  padding: 50rpx 30rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.feature-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  min-width: 36rpx;
  height: 36rpx;
  background: #ff4444;
  color: white;
  font-size: 22rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 10rpx;
  font-weight: bold;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 620rpx;
  background: #ffffff;
  border-radius: 30rpx;
  padding: 60rpx 50rpx;
  box-sizing: border-box;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.modal-input {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.date-picker {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  border: none;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}